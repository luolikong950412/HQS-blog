<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hello.huqingshan.mapper.TagMapper">

    <!--查询-->
    <select id="selectTag" resultMap="tagmap">
        select * from tag
    </select>
    <resultMap id="tagmap" type="com.hello.huqingshan.model.Tag">
        <id property="tagId" column="tag_id"/>
        <result property="tagName" column="tag_name"/>
    </resultMap>

    <!--添加-->
    <insert id="addTag">
        insert into tag (tag_name) values (#{tagName})
    </insert>
    <!--删除-->

    <delete id="deleteTagById">
        delete from tag where tag_id = #{id}
    </delete>

    <!--添加文章和标签映射-->
    <insert id="add_article_tag">
        insert into article_tag (art_id,tag_id) values
        <foreach collection="tagList" index="" item="item" separator=",">
            (#{articleId},#{item.tagId})
        </foreach>
    </insert>

</mapper>